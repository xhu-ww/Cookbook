<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.nsx.cookbook">
    <!--网络访问权限-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!--查看网络状态的权限-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".app.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/food_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.WelcomActivity"
            android:theme="@style/NoAction_Full">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.GuideActivity"
            android:theme="@style/NoAction_Full"/>
        <activity
            android:name=".ui.activity.MainActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".ui.activity.FoodListActivity"/>
        <activity android:name=".ui.activity.FoodDetailActivity"/>
        <activity
            android:name=".ui.activity.ImageShowActivity"
            android:theme="@style/NoAction_Full"/>
        <activity
            android:name=".ui.activity.StepActivity"
            android:theme="@style/NoAction_Full"/>
        <activity android:name=".ui.activity.SearchActivity"/>
        <activity android:name=".ui.activity.SearchResultActivity"/>
        <activity android:name=".ui.activity.ChatActivity"/>
        <activity android:name=".ui.activity.HistoryActivity"/>
        <activity android:name=".ui.activity.FestivalActivity"/>
        <activity android:name=".ui.activity.SolarTermsActivity"/>
    </application>
</manifest>